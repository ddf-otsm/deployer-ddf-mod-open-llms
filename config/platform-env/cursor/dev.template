# Environment Configuration for Cursor Platform - Development
# This file is copied to .env during setup

# Application Configuration
NODE_ENV=development
PORT=7001
HOST=localhost

# Authentication
AUTH_DISABLED=true

# Logging
LOG_LEVEL=debug

# Ollama Configuration
OLLAMA_HOST=localhost:11434

# Development Features
ENABLE_DEBUG=true
ENABLE_SWAGGER=true

# Secrets (set these environment variables)
# export KEYCLOAK_CLIENT_SECRET="your-secret-here"
# export AWS_ACCOUNT_ID="123456789012"

# Platform-specific settings
PLATFORM=cursor
ENVIRONMENT=dev

# Authentication (disabled for development)
KEYCLOAK_ENABLED=false

# Database Configuration
DATABASE_URL=sqlite:./dev.db
DATABASE_TYPE=sqlite

# Logging Configuration
LOG_FORMAT=pretty

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Development Features
HOT_RELOAD=true
VERBOSE_LOGGING=true

# LLM Configuration
LLM_PROVIDER=local
LLM_MODEL_PATH=./models
LLM_CACHE_ENABLED=true

# Security (development only)
CORS_ENABLED=true
CORS_ORIGIN=*
JWT_SECRET=dev-secret-key-change-in-production

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# File Upload
UPLOAD_MAX_SIZE=10MB
UPLOAD_DIR=./uploads

# Cache Configuration
REDIS_ENABLED=false
CACHE_TTL=3600 